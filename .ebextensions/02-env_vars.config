container_commands:
   storge_cache:
      command: "sudo chmod -R 777 /var/www/html/storage"
   #move_env:
   #   command: "sudo cp /var/www/html/.env.example /var/www/html/.env"

files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/02_configure_environment_file.sh":
      mode: "000755"
      owner: root
      group: root
      content: |
        #!/bin/bash
        if [ ! -f /var/www/html/.env ] ; then
            cp /var/www/html/.env.example /var/www/html/.env
        else
           OUTPUT="$(egrep "^APP_KEY=(.+)$" /var/www/html/.env)"
           if [ -z "$OUTPUT" ]; then
                php  /var/www/html/artisan key:generate
            fi
        fi